<h1 class="page-title">Admin Dashboard</h1>
<h3 class="page-title">
  Create a park
  <%= link_to new_park_path do %>
    <i class="fas fa-plus-square pill-icon"></i>
  <% end %>
</h3>
<h3 class="page-title">
  Create a facility
  <%= link_to new_facility_path do %>
    <i class="fas fa-plus-square pill-icon"></i>
  <% end %>
</h3>

<h3 class="page-title">All Facilities</h3>
<div class="pills-wrap page-title">
  <% @facilities.each do |facility| %>
    <div class="pill"><%= facility.name %> 
      <%= link_to facility_path(facility), method: "DELETE", class:"pill-icon" do %>
        <i class="fas fa-times"></i>
      <% end %>
    </div>
  <% end %>
</div>
